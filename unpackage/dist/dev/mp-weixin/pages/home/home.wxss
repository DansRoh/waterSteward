.page-home {
  min-height: 100vh;
  background-color: #F2F4F7;
  box-sizing: border-box;
}
.page-home .water-banner {
  width: 100vw;
  height: 924rpx;
  position: relative;
}
.page-home .water-banner .water-bg {
  height: 100%;
  background-color: #00D1FF;
}
.page-home .water-banner .water-inner {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 1px solid;
  color: #fff;
}
.page-home .water-banner .water-inner .residue-water {
  text-shadow: 4px 4px 12px rgba(0, 209, 255, 0.81);
}
.page-home .user-water-info {
  width: 100vw;
  padding: 64rpx 0;
  display: flex;
  justify-content: space-evenly;
}
.page-home .user-water-info .info-card {
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-left: 30rpx;
  width: 320rpx;
  height: 208rpx;
  background-color: #fff;
  border-radius: 32rpx;
  box-shadow: 4rpx 4rpx 48rpx 0rpx rgba(0, 0, 0, 0.09);
}
.page-home .bottom-tab-box {
  margin: 0 auto;
  padding: 0 20rpx;
  width: 678rpx;
  height: 112rpx;
  background-color: #fff;
  border-radius: 56rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-home .offline-overlay .wrapper {
  border: 2rpx solid;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.page-home .offline-overlay .wrapper .inner-box {
  width: 624rpx;
  height: 528rpx;
  border-radius: 48rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  box-sizing: border-box;
  padding: 50rpx 0;
}
.page-home .offline-overlay .wrapper .inner-box .icon {
  width: 172rpx;
  height: 154rpx;
  border: 1px solid;
}
.page-home .offline-overlay .wrapper .inner-box .tips-text {
  width: 496rpx;
  height: 132rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: 400;
}

