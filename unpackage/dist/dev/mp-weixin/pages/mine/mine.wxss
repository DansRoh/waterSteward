.page-mine {
  min-height: 100vh;
  background-color: #F2F4F7;
  box-sizing: border-box;
}
.page-mine .mine-card {
  margin: 0 auto;
  width: 700rpx;
  height: 824rpx;
  background-color: #fff;
  border-radius: 96rpx;
  overflow: hidden;
}
.page-mine .mine-card .top-box {
  position: relative;
  width: 100%;
  height: 168rpx;
  background-color: #17DA9C;
}
.page-mine .mine-card .top-box .user-photo {
  background-color: pink;
  position: absolute;
  bottom: -92rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  width: 184rpx;
  height: 184rpx;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0rpx 4rpx 18rpx 0rpx rgba(136, 137, 137, 0.29);
  border-radius: 50%;
}
.page-mine .mine-card .top-box .user-name {
  position: absolute;
  bottom: -156rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  color: #828698;
  font-size: 36rpx;
}
.page-mine .mine-card .mine-card-content {
  margin-top: 214rpx;
  box-sizing: border-box;
}
.page-mine .mine-card .mine-card-content .handle-box {
  height: 112rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 34rpx;
  font-size: 28rpx;
  color: #262626;
}

